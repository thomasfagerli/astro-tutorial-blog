---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Thomas Fagerli">
	<main>
		<header>
			<h1>Your Name</h1>
			<p>Web Developer</p>
		</header>
		
		<section>
			<img src="profile-placeholder.jpg" alt="Profile Image" class="profile-image">
		</section>
		
		<section>
			<div class="section-title">About Me</div>
			<div class="section-content">
				<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec nec erat non ligula blandit aliquet.</p>
			</div>
		</section>
		
		<section>
			<div class="section-title">Skills</div>
			<div class="section-content">
				<p>HTML, CSS, JavaScript, PHP, MySQL</p>
			</div>
		</section>
		
		<section>
			<div class="section-title">Experience</div>
			<div class="section-content">
				<p>Company Name - Web Developer (Year - Year)</p>
				<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec nec erat non ligula blandit aliquet.</p>
			</div>
		</section>
		
		<section>
			<div class="section-title">Education</div>
			<div class="section-content">
				<p>University Name - Degree (Year - Year)</p>
			</div>
		</section>
		
		<section>
			<div class="section-title">Contact</div>
			<div class="section-content">
				<p>Email: email@example.com</p>
				<p>Phone: (123) 456-7890</p>
			</div>
		</section>
	</main>
</Layout>

<style>
	body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }
    header {
        background-color: #2c3e50;
        color: white;
        padding: 20px;
        text-align: center;
    }
    section {
        margin: 20px;
    }
    .profile-image {
        width: 150px;
        border-radius: 50%;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
    .section-title {
        font-size: 24px;
        margin-bottom: 10px;
    }
    .section-content {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
    }
</style>
